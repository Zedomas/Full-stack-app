<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    
    <title>Best Chicago Bars</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <%- include('./partials/nav.ejs') %>
    
  </nav>   
    
    <h1 class="toppicks">Top Picks</h1>
    <div class="wrapper">
        <% for (let i = 0; i < Bars.length; i++) { %>
        <div class="barcontainer">
            <div class="title">
                <a class="bartitle" href="/bars/<%=Bars[i].id%>"><h3><%= Bars[i].name %></h3></a>   
            </div>
                <a href="/bars/<%=Bars[i].id%>"><img class="barImage" src="<%= Bars[i].img %>"></img></a>
            <p class="location">Neighborhood: <%=Bars[i].location%></p>
        </div>
        <% } %>
    </div>
    <footer>
        <%- include('./partials/footer.ejs') %>  
    </footer>

</body>
</html>