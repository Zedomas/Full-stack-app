<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    
    <title><%=bar.name%></title>
</head>
<body>
    <!-- Start of Nav -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%- include('./partials/nav.ejs') %>
        <li class="nav-item">
            <a class="nav-link" href="edit/<%=bar.id%>">Edit Bar</a>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search Feature TBD" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
        </div>
      </nav>
       <!-- End of Nav -->
    <div class='container'>
        <h1><%=bar.name%> <small><%=bar.location%></small></h1>
        <div class="row">
            <img class="img-fluid col-lg-8" src="<%=bar.img%>"> 
            <div class="row description col-lg-4">
                <h4><u>Description</u></h4>
                <p><%=bar.description %></p> 
            </div> 
        </div>           
        
        <div class="Specials">
            <h3><u>Specials</u></h3>
            <p><%= bar.specials %></p>
        </div>      
    </div>   
    <footer>
        <%- include('./partials/footer.ejs') %>
    </footer>
</body>
</html>